{
  "name": "@vegaci_shared/vsplit-payment-gateway",
  "version": "1.0.1",
  "description": "A B2B payment gateway integration package for Stripe with split payment capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react-index.d.ts",
      "require": "./dist/react-index.js",
      "import": "./dist/react-index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run build:css",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --minify",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/*.ts src/utils/*.ts",
    "lint:fix": "eslint src/*.ts src/utils/*.ts --fix",
    "prepare": "npm run build",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major",
    "release": "npm run pre-release && npm version $1 && npm run post-release",
    "pre-release": "npm run lint && npm run test && npm run build",
    "post-release": "git push && git push --tags && npm publish",
    "verify-release": "cd test-installation && npm install @vegaci_shared/vsplit-payment-gateway@latest && npm run test"
  },
  "keywords": [
    "stripe",
    "payment",
    "split-payment",
    "b2b",
    "payment-gateway",
    "typescript",
    "react"
  ],
  "author": "VSplit Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ModyG/vsplit-payment-gateway.git"
  },
  "bugs": {
    "url": "https://github.com/ModyG/vsplit-payment-gateway/issues"
  },
  "homepage": "https://github.com/ModyG/vsplit-payment-gateway#readme",
  "dependencies": {
    "@stripe/stripe-js": "^4.0.0",
    "stripe": "^15.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.0.5",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
